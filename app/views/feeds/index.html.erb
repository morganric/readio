
<h1 class="text-center">Featured Feeds</h1>
<br/>
<div class=" col-md-12 ">
    <% @feeds.each do |feed| %>
      <div class="col-md-2">
        <%= link_to image_tag(feed.image, class: 'img-thumbnail ', width: 200, style: 'margin-right:5px;'), feed %>
        <h5 class=''><%= link_to truncate(feed.title, :length => 20), feed %></h5>

        <% if user_signed_in? %>
              <% if current_user.try(:admin?) %>
        <%= link_to 'Edit', edit_feed_path(feed) %>
        <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>
        </div>
    <% end %>

</div>