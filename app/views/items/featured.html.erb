<h1>Featured</h1>
<hr/>

<div class="col-md-12 row">
<% @items.each do |item| %>
	<div class="col-md-4 pull-left">
	<%= link_to image_tag(item.feed.image, width: '300', :class => "img-thumbnail"), item %>
	<h3><%= link_to truncate(item.title,:length => 25), item %>
	<br/>
	<small>
		by <%= link_to truncate(item.feed.title,:length => 25), item.feed %>
	</small>
	</h3>
	</div>
<% end %>
</div>