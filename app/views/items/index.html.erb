
<h1 class="text-center">Readio</h1>
<hr/>

    <% @items.each do |item| %>

    	<%= link_to image_tag(item.feed.image, class: 'img-thumbnail pull-left', width: 100, style: 'margin-right:5px;'), item %>
        <h3><%= link_to item.title, item %></h3>
        <p>
		  <strong>Plays:</strong>
		  <%= item.plays %>
		</p>



        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        <hr/>
    <% end %>


<%= link_to 'New Item', new_item_path %>
