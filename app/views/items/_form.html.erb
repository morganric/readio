<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :pub_date %>
    <%= f.input :url %>
    <%= f.input :link %>
    <%= f.input :guid %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :duration %>
    <%= f.input :image %>
    <%= f.input :slug %>
    <%= f.input :feed_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
